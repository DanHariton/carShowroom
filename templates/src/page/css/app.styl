@import "~startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.css"
@import "~normalize.css/normalize.css"
@import "~bootstrap/dist/css/bootstrap.css"
@import '~select2/dist/css/select2.css'
@import "~@ttskch/select2-bootstrap4-theme/dist/select2-bootstrap4.css"

@font-face
  font-family MonseratBold
  src url("./font/Montserrat-Bold.otf")

@font-face
  font-family MonseratRegular
  src url('./font/Montserrat-Regular.otf')

@font-face
  font-family MonseratItalic
  src url("./font/Montserrat-ExtraLightItalic.otf")

body
  font-family MonseratRegular

#banner-block
  img
    width 100%

.car-models
  margin-bottom 60px !important
  h1
    font-weight bold
    text-align center
    margin-top 3%
    font-size 37px

.car-links
  display flex
  flex-direction row
  justify-content space-around

.model-link
  width 30%
  display flex
  flex-direction column
  justify-content space-between
  align-items center
  color #000
  text-decoration none
  img
    width 300px


.model-link:hover
  text-decoration underline
  color #e30613

.toyota-cars
  img
    width 170px

.other-cars
  i
    font-size 150px

.searching-level
  display flex
  flex-direction row
  justify-content space-between
  margin-bottom 60px

.searching-car
  width 30%
  display flex
  flex-direction column
  align-items center
  .about-car
    margin-top 10px
    display flex
    justify-content space-between
    width 85%
    font-weight bold
    cursor default
  .car-manufaktura
    width 85%
    cursor default
    font-size 15px
    p
      margin 0
  .link-car
    width 85%
    display flex
    flex-direction row
    justify-content flex-end
    margin-top 12px
    a
      padding 17px 60px
      font-size 15px
      background-color #e30613
      color #ffffff
      text-decoration none
      border 1px solid #e30613
    a:hover
      color #e30613
      background-color #ffffff
      border 1px solid #e30613
      font-weight bold
  img
    width 85%

.searching-params-block
  margin-bottom 60px !important
  .searching-selector
    border 2px solid #000
    color #000
    border-radius 0
    box-shadow none

.search-car-form
  .container-form-params
    display flex
    flex-direction row
    justify-content space-around
  .submit-search-form
    display flex
    flex-direction row
    justify-content flex-end
    width 98.4%
    button
      margin-top 20px
      color #ffffff
      background-color #e30613
      border 1px solid #e30613
      border-radius 0
      padding 15px 60px
    button:hover
      color #e30613
      background-color #ffffff
      text-decoration underline
  .searching-params-forms
    width 30%
    .search-more-params-container
      display flex
      justify-content flex-end
      #search-more-params
        color #000
        text-decoration underline
        margin 8px 0

.container-custom
  width 85%
  margin auto

.select2-container--bootstrap4
  .select2-selection
    box-shadow none !important
    border 2px solid #000 !important
    border-radius 0

.select2-container--bootstrap4
  .select2-container--focus
    .select2-selection
      box-shadow none !important
      border-color #000 !important

#about-car
  margin-top 50px
  display flex
  flex-direction row

.lef-side
  width 55%
  .car-photos
    display flex
    flex-direction column
    align-items center
    .smallest-photo-car
      display flex
      flex-direction column
      justify-content center
      align-items center
      width 80%
      margin-top 25px
      .container-level-photo
        display flex
        flex-direction row
        justify-content space-between
        margin-bottom 15px
    #preview-photo
      width 80%

.mark-car
  width 80%
  margin auto
  padding 20px 0
  border-bottom 1px solid #282828
  p
    color #282828

.preview-photo-small
  width 24%

.social-car
  width 80%
  margin auto
  padding 30px 0
  border-bottom 1px solid #282828
  h2
    font-weight bold
    font-size 20px
    color #282828
  .social-networks
    margin-top 20px
    margin-bottom 20px
    i
      color #282828
      font-size 45px
      margin-right 2%
  a
    color #282828
    font-size 12px
    text-decoration underline

.why-autoeder
  width 80%
  margin auto
  border-bottom 1px solid #282828
  padding 30px 0
  h2
    font-family MonseratBold
    margin-bottom 15px
    font-size 24px
    color #282828
  ul
    padding-left 16px
    li
      margin-bottom 7px

.feedback-user-car
  width 80%
  margin auto
  padding 30px 0
  h2
    font-family MonseratBold
    margin-bottom 15px
    font-size 24px
    color #282828
  .comment-user
    font-family MonseratItalic
    font-size 25px
  .user
    text-align end

.right-side
  width 45%

.detail-manufakrura-car
  margin 0
  text-transform uppercase
  font-family MonseratBold
  font-size 15px

.detail-model-car
  font-family MonseratBold
  margin-bottom 60px

